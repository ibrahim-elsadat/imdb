@model IMDB.Models.RegisterViewModel


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    @Html.TextBoxFor(m => m.UseName, new { @class = "form-control", @placeholder = "UseName", @name = "Username", @required = "" })

    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @name = "Email", @required = "" })


    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @name = "Password", @required = "" })


    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password", @name = "Password", @required = "" })

    <input type="submit" class="btn btn-default" value="Register" />

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

