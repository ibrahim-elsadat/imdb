                    <nav>
                        <ul class="nav navbar-nav">
                            <li class=""><a href="@Url.Action("Index","Home")">Home</a></li>

                            <li>@Html.ActionLink("Edit Movies", "Index", "Movie")</li>

                            <li>@Html.ActionLink("Edit Genre", "Index", "Genre")</li>

                            <li>@Html.ActionLink("Edit Actors", "Index", "Actor")</li>
                            <li>@Html.ActionLink("Edit Directors", "Index", "Director")</li>

                            <li>@Html.ActionLink("Edit Countries", "Index", "Country")</li>

                            <li>@Html.ActionLink("Manage Roles", "Index", "Role")</li>
                            <li>@Html.ActionLink("Edit Users", "Index", "user")</li>
                            <li>@Html.ActionLink("Edit UserRoles", "Index", "UserRoles")</li>

                        </ul>
                    </nav>
                </div>
            </nav>
        </div>
    </div>
    <!-- //nav -->


    @RenderBody()



