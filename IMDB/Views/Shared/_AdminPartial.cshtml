<body>
    <!-- header -->
    <div class="header">
        <div class="container">
            <div class="w3layouts_logo">
                <a href="@Url.Action("Index","Home")"><h1>IMDb</h1></a>
            </div>
            <div class="w3_search">
                @using (Html.BeginForm("Search", "Home", FormMethod.Get))
                {
                    <input type="text" name="search" placeholder="Search" required="">
                    <input type="submit" value="Search">
                }
            </div>
            <div class="w3l_sign_in_register">
                @*<ul>
                        <li><a href="@Url.Action("Login", "Account")" data-toggle="modal" data-target="#myModal"><i class="fa fa-user"></i> Login</a></li>

                    </ul>*@
